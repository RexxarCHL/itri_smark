<% javascript 'users_form' %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <% if session[:isAdmin] || session[:isAdmin].nil? %>
      <%= f.text_field :username%> <br>
    <% else %>
      <%= f.text_field :username, disabled: true%> <br>
    <% end %>
    <%= f.label :passwd %>
    <%= f.password_field :passwd %> <br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

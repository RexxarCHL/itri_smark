<% uu = session[:user_id] %>
<%= nav_bar :fixed => :top, :brand => "Smark", :brand_link => root_path, :responsive => true, :inverse => true do %>
	<%= menu_group do %>
		<%= menu_divider %>
		
		<% if session[:isAdmin] %>
			<%= menu_item "Users", users_path %>
			<%= menu_item "Admin Log", admin_logs_path %>
			<%= menu_item "Vehicle Log", vehicle_logs_path %>
		<% else %>
			<%= menu_item "User Info", users_path%>
		<% end %>
	<% end %>


	<%= menu_group :pull => :right do %>
		<% if uu %>
		<%= menu_item "Logout", logout_path %>
		<% else %>
			<%= menu_item "Login", login_path %>
		<% end %>
	<% end %>

	<%= menu_group :pull => :right do %>
		<% if uu %>
			<%= menu_text "Logged in as #{session[:username]}"%>
		<% end %>
	<% end %>
<% end %>